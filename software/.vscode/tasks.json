{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build PPG sensor V000",
            "type": "shell",
            "command": "make PROJECT=PPG_sensor_V000",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build PPG sensor V000 documentation",
            "type": "shell",
            "command": "make PROJECT=PPG_sensor_V000 doc",
            "group": "build",
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make PROJECT=PPG_sensor_V000 clean",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}